<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyGymApp" parent="Base.Theme.MyGymApp">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/highlightColor</item>
        <item name="colorPrimaryVariant">@color/secondaryTextColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/highlightColor</item>
        <item name="colorSecondaryVariant">@color/secondaryTextColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnError">@color/black</item>

        <item name="colorSurface">@color/purple_200</item>
        <item name="android:colorBackground">@color/surface</item>
        <item name="android:colorError">@color/error</item>
    </style>

    <style name="Base.Theme.MyGymApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">true</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/google_sans</item>
    </style>

    <style name="Theme.NavDrawer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/google_sans</item>
    </style>

    <style name="Theme.NavDrawer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/google_sans</item>
    </style>
</resources>